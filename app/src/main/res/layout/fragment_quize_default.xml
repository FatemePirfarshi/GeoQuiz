<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".controller.fragment.QuizeDefaultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_user"
            android:layout_width="81dp"
            android:layout_height="66dp"
            android:layout_gravity="left"
            android:layout_margin="20dp"
            android:src="@drawable/ic_add_user" />

        <TextView
            android:id="@+id/txtView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="username" />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="81dp"
            android:layout_height="66dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:src="@drawable/ic_setting" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="SCORE:"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtview_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_quote_left"
            android:drawableRight="@drawable/ic_quote_right"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="question" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_false"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_multiply" />

            <ImageView
                android:id="@+id/btn_true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_double_tick" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_btn_last"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_last" />

            <ImageButton
                android:id="@+id/img_btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_left" />

            <ImageButton
                android:id="@+id/img_btn_prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_right" />

            <ImageButton
                android:id="@+id/img_btn_first"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_first" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_cheat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_cheat" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:padding="24dp"
        android:text="@string/reset" />


</LinearLayout>